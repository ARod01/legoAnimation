.page__loader div:nth-child(1)
    animation-delay: .2s

.page__loader div:nth-child(2)
    animation-delay: .4s

.page__loader div:nth-child(3)
    animation-delay: .6s

@keyframes scaling {
    0%, 100% {
        transform: scale(1);
    }

    50% {
        transform: scale(.2);
    }
}

@keyframes loader {
    0% {
        opacity: 1;
        visibility: visible;
    }
    95% {
        opacity: 1;
        visibility: visible;
    }
    100% {
        opacity: 0;
        visibility: hidden;
    }
}

@keyframes navbar{
    0%{
        transform: translateY(-20vh)
    }
    100%{
        transform: translateY(0)
    }
}
@keyframes main{
    0%{
        transform: translateX(-60%)
    }
    100%{
        transform: translateX(0)
    }
}
@keyframes superman{
    0%{
        transform: translateY(1000px)
    }
    80%{
        transform: translateY(-200px)
    }
    100%{
        transform: translateY(0)
    }
}
@keyframes superman-name{
    0%{
        opacity: 0;
        visibility: hidden;
    }
    100%{
        opacity: 1;
        visibility: visible;
    }
}

@keyframes heroes{
    0%{
        transform: translateY(500px)
    }
    100%{
        transform: translateY(0)
    }
}