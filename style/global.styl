yellow-lego = #FFD030
blue-lego = #025DB9
red-lego = #D13D2A
font = 'Lato', sans-serif;
*
    margin 0
    padding 0
    box-sizing border-box
    font-family: 'Lato', sans-serif;

/* html
    font-size 62.5%
 */
.page
    width 100%
    height 100vh
    position relative
    &__content
        position absolute
        width 100%
        height 100vh
        z-index 1
        display grid
        grid-template-columns 60% 40%
        grid-auto-rows 20vh 50vh 30vh
        align-items center
        justify-items: center
    &__loader
        position absolute
        z-index 3
        background-color #000
        width 100%
        height 100vh
        display flex
        justify-content center
        align-items center
        animation loader 1.7s linear forwards
        div
            background-color #fff
            height 40px
            width 40px
            border-radius 50%
            margin 10px
            transform scale(0)
            animation scaling 2s ease-in-out infinite

.header
    grid-column: 1 / 2
    grid-row 1 / 2
.main
    grid-column: 1 / 2
    grid-row: 2 / 3
.heroes
    grid-column: 1 / 2
    grid-row: 3 / 4
    width: 100%
    height: 100%
    display: flex
    justify-content: flex-start
    align-items: flex-end
.superman
    grid-column: 2 / 3
    grid-row: 1 / 4