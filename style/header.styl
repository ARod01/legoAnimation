.header
    &__nav
        width: 460px
        max-width: 700px
        display: flex
        flex-direction row
        justify-content: space-evenly
        align-items: center
        animation: 2.1s navbar .5s ease-in-out
        &-brand
            width: 35px
            height 35px
        &-items
            display flex
            list-style: none
            a
                text-decoration none
                font-weight: 300
                font-size 16px
                color red-lego
                margin-left 10px
                text-transform uppercase

